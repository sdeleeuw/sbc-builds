FROM debian:12

# apply latest security patches
RUN apt update \
 && apt -y upgrade \
 && apt -y full-upgrade \
 && apt -y autoremove \
 && apt -y clean

# basic tools
RUN apt install -y git sudo vim wget

# add non priviledged user for building
RUN useradd --uid 1000 --comment "Build" --shell /bin/bash --create-home build \
 && echo "build ALL=(ALL) NOPASSWD: ALL" | tee /etc/sudoers.d/build-nopasswd

# basic build environment
RUN apt install -y build-essential meson pkgconf

# SDL2 library
RUN apt install -y libsdl2-dev libsdl2-net-dev

# other dependencies
RUN apt install -y \
  libopusfile-dev \
  libpng-dev

USER build
WORKDIR /build
